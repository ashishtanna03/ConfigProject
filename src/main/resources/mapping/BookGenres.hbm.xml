<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.pojo.hibernate.BookGenres" table="book_genres" catalog="book">
        <composite-id mapped="true" class="com.pojo.hibernate.BookGenresPK">
            <key-property name="bookId" column="book_id"/>
            <key-property name="genreId" column="genre_id"/>
        </composite-id>
        <many-to-one name="bookInfoByBookId" class="com.pojo.hibernate.BookInfo">
            <column name="book_id" not-null="true"/>
        </many-to-one>
        <many-to-one name="genresByGenreId" class="com.pojo.hibernate.Genres">
            <column name="genre_id" not-null="true"/>
        </many-to-one>
    </class>
</hibernate-mapping>